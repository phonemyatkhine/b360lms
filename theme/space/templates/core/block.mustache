{{!
    @template theme_space/block

    Example context (json):
    {
        "id": "block0",
        "showskiplink": true,
        "type": "html",
        "ariarole": "complementary",
        "title": "Test block",
        "blockinstanceid": 1,
        "content": "<p>Hello block world!</p>"
    }

}}


{{! Start Block Container }}
<section id="{{id}}"
     class="{{#hidden}}hidden{{/hidden}} block block_{{type}} {{#hascontrols}}block_with_controls{{/hascontrols}} card mb-4"
     role="{{ariarole}}"
     data-block="{{type}}"
     {{#arialabel}}
        aria-label={{#quote}}{{{arialabel}}}{{/quote}}
     {{/arialabel}}
     {{^arialabel}}
        {{#title}}
          aria-labelledby="instance-{{blockinstanceid}}-header"
        {{/title}}
     {{/arialabel}}>

    {{! Block contents }}
    <div class="card-body">

        {{! Block header }}
        {{#title}}
            <h5 id="instance-{{blockinstanceid}}-header" class="card-title">{{{title}}}</h5>
        {{/title}}

        {{#hascontrols}}
            <div class="block-controls header">
                {{{controls}}}
            </div>
        {{/hascontrols}}

        <div class="card-text content mt-3">
            {{{content}}}
            <div class="footer">{{{footer}}}</div>
            {{{annotation}}}
        </div>

    </div>

{{! End Block Container }}
</section>
