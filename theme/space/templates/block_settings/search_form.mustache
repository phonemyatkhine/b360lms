<div class="col-12 row no-gutters">
  <form method="get" action="{{action}}" class="adminsearchform row" role="search">
      <div class="col-8 pl-0 pr-0">
          <label class="sr-only" for="adminsearchquery">{{label}}</label>
          <input class="form-control" type="text" name="query" value="{{searchvalue}}" id="adminsearchquery" size="10">
      </div>
      <button type="submit" class="col-4 btn btn-secondary"><i class="icon fas fa-search mr-0 ml-0"></i></button>
  </form>
</div>
