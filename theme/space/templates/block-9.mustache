{{#sliderenabled}}
<div class="c-siema {{#showherologo}}c-hero-with-logo{{/showherologo}}{{^showherologo}}c-hero-without-logo{{/showherologo}}">

  <div class="siema-container {{#sliderfwenabled}}siema-container--fw{{/sliderfwenabled}}">

      <div class="siema">
      {{#slides}}
      <div class="siema-container {{#sliderfwenabled}}siema-container--fw{{/sliderfwenabled}} row no-gutters justify-content-center align-items-center" >
        <div class="c-hero-content col-sm-11 col-lg-7 text-center">
          {{#subtitle}}<h5 class="h5">{{{ subtitle }}}</h5>{{/subtitle}}
          {{#title}}<h3 class="h1">{{{ title }}}</h3>{{/title}}
          {{#caption}}<div class="h3">{{{ caption }}}</div>{{/caption}}
        </div>
        <img src="{{{ image }}}" alt="" width="100%" class="c-hero-img img-fluid" />
      </div>
      {{/slides}}
      </div>

      <button class="siema-prev prev"><i class="fas fa-chevron-left"></i></button>
      <button class="siema-next next"><i class="fas fa-chevron-right"></i></button>
    </div>
</div>


<script src="{{siteurl}}/theme/space/addons/siema/siema.min.js"></script>
<script>
const mySiema = new Siema( {
    duration: 250,
    loop: true
});
const prev = document.querySelector('.prev');
const next = document.querySelector('.next');

prev.addEventListener('click', () => mySiema.prev());
next.addEventListener('click', () => mySiema.next());

{{#sliderintervalenabled}}setInterval(() => mySiema.next(), {{{ sliderinterval }}});{{/sliderintervalenabled}}

</script>

{{/sliderenabled}}

{{^sliderenabled}}
