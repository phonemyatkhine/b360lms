{{!
    Page navbar.
}}

<div id="topBar2" class="s-top {{^hiddensidebar}}s-top--sidebar{{/hiddensidebar}} justify-content-center mt-md-0">

  <div data-region="drawer-toggle" class="d-sm-inline d-md-none">
      <button type="button" class="sidebar-btn" data-side="left">
        <i class="fas fa-equals" id="sidebarBtn"></i>
      </button>
  </div>

  <div class="d-sm-inline d-md-none">
      <button type="button" class="mobile-topbar-btn">
        <i class="far fa-user-circle" id="mobileTopBarBtn"></i>
        <i class="fas fa-times hidden" id="mobileTopBarCloseBtn"></i>
      </button>
  </div>
  
  <div class="s-top-container">
    <div id="navbar" class="c-container row no-gutters justify-content-start align-items-center">

      <div data-region="drawer-toggle" class="d-sm-none d-md-inline ml-md-0 mr-md-3">
          <button type="button" class="sidebar-btn" data-side="left">
            <i class="fas fa-equals" id="sidebarBtn"></i>
          </button>
      </div>

      {{#customlogotopbar}}
      <div class="logo c-menu-sep d-md-inline pl-md-0 pr-md-2 ml-md-3 mr-md-2">
          <a href="{{{ config.wwwroot }}}"><img src="{{customlogotopbar}}" alt="{{sitename}}" /></a>
      </div>
      {{/customlogotopbar}}
      {{#ShowTopBarText}}<div class="c-top-text mr-md-3 ml-md-4 py-md-0 pr-md-3 pl-md-0">{{{TopBarText}}}</div>{{/ShowTopBarText}}

      <div class="nav ml-md-auto align-items-center justify-content-center">

          <div class="search-box d-block">
          {{{ output.search_box }}}
          </div>

          <!-- navbar_plugin_output -->
          <div class="top-icons-nav c-menu-sep mr-md-3">{{{ output.navbar_plugin_output }}}</div>

          {{#output.render_lang_menu}}<div class="c-lang-menu c-menu-sep">{{{ output.render_lang_menu }}}</div>{{/output.render_lang_menu}}

          {{#ShowCustomNav}}<div class="c-custom-nav-container mr-md-3 c-menu-sep">{{> theme_space/custom-nav }}</div>{{/ShowCustomNav}}

          <!-- user_menu -->
          <div class="c-user-menu">
              {{{ output.user_menu }}}
          </div>

      </div>
      <!-- search_box -->
    </div>
  </div>

</div>
