{{!
    Page navbar.
}}

<div id="topBar6" class="s-top {{^hiddensidebar}}s-top--sidebar{{/hiddensidebar}} justify-content-center">

  <div data-region="drawer-toggle" class="d-sm-inline d-md-none">
      <button type="button" class="sidebar-btn" data-side="left">
        <i class="fas fa-equals" id="sidebarBtn"></i>
      </button>
  </div>

  <div class="d-sm-inline d-md-none">
      <button type="button" class="mobile-topbar-btn">
        <i class="far fa-user-circle" id="mobileTopBarBtn"></i>
        <i class="fas fa-times hidden" id="mobileTopBarCloseBtn"></i>
      </button>
  </div>

  <div class="s-top-container">
    <div id="navbar" class="c-container row no-gutters justify-content-start align-items-center">

      <div data-region="drawer-toggle" class="d-sm-none d-md-inline ml-md-0 mr-md-3">
          <button type="button" class="sidebar-btn" data-side="left">
            <i class="fas fa-equals" id="sidebarBtn"></i>
          </button>
      </div>

      {{#customlogotopbar}}
      <div class="logo d-sm-block d-md-inline c-menu-sep pr-md-1 mr-md-2">
          <a href="{{{ config.wwwroot }}}"><img src="{{customlogotopbar}}" alt="{{sitename}}" /></a>
      </div>
      {{/customlogotopbar}}
      {{#ShowCustomNav}}<div class="c-custom-nav-container c-menu-sep mr-md-4 pr-md-1">{{> theme_space/custom-nav }}</div>{{/ShowCustomNav}}    
      {{#ShowTopBarText}}<div class="c-top-text">{{{TopBarText}}}</div>{{/ShowTopBarText}}

      <div class="nav ml-sm-center ml-md-auto align-items-center justify-content-center">

          {{#output.render_lang_menu}}<div class="c-lang-menu c-menu-sep ml-md-2 mr-md-3">{{{ output.render_lang_menu }}}</div>{{/output.render_lang_menu}}

          <div class="search-box d-block">
          {{{ output.search_box }}}
          </div>

          <!-- navbar_plugin_output -->
          <div class="top-icons-nav c-menu-sep mr-3">{{{ output.navbar_plugin_output }}}</div>

          <!-- user_menu -->
          <div class="c-user-menu">
              {{{ output.user_menu }}}
          </div>

      </div>
      <!-- search_box -->
    </div>

    {{#customtopnavhtml}}
    <div class="c-top-nav border-top mt-2 pt-1">
      <div class="c-container">
        <div class="s-custom-main-nav text-sm-center text-md-left">
          <nav class="c-custom-main-nav navbar navbar-expand-md p-0">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <i class="fas fa-angle-down"></i>
            </button>

            {{{customtopnavhtml}}}

          </nav>
        </div>
      </div>
    </div>
    {{/customtopnavhtml}} 
  </div>
</div>
